<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <TextView android:id="@+id/title_connected_devices"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_connected_devices"
        android:background="#666"
        android:textColor="#fff"
        android:paddingLeft="5dp"
    />
    <ListView android:id="@+id/connected_devices"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
    />
    <TextView android:id="@+id/title_status_frame"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_status_frame"
        android:background="#666"
        android:textColor="#fff"
        android:paddingLeft="5dp"
    />
    <ListView android:id="@+id/status_frame"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:transcriptMode="alwaysScroll"
        android:layout_weight="1"
        android:stackFromBottom="true"
    />
</LinearLayout>

