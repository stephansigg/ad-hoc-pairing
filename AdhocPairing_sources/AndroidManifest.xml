<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.pairing.AdhocPairing"
      android:versionCode="1"
      android:versionName="1.0">
    <uses-sdk android:minSdkVersion="7" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>

    <application android:icon="@drawable/icon" android:label="@string/app_name">
        <activity android:name=".AdhocPairingActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".DeviceListActivity"
                  android:label="@string/select_device"
                  android:theme="@android:style/Theme.Dialog"
                  android:configChanges="orientation|keyboardHidden" />
        <activity android:name=".DeviceSelector"
                  android:label="@string/pick_device"
                  android:theme="@android:style/Theme.Dialog"
                  android:configChanges="orientation|keyboardHidden" />
        <activity android:name=".ShiftTimeInputActivity"
                  android:label="@string/shift_time_input"
                  android:theme="@android:style/Theme.Dialog" />
        <activity android:name=".AdhocPairingPreferenceActivity"
                  android:label="@string/preference" />
        <activity android:name=".DiffPercentInputActivity"
                  android:label="@string/diff_percent_input"
                  android:theme="@android:style/Theme.Dialog" />
        <activity android:name=".ShiftTimeInput2Activity"
                  android:label="@string/shift_time_input"
                  android:theme="@android:style/Theme.Dialog" />

    </application>
</manifest>